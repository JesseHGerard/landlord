<main role="main" class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron bg-primary">
        <!-- Row -->
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-light">SerfBoard</h1>
            <p class="lead text-light">An application to streamline tenant feedback.</p>

          </div>

        </div>
        <hr>
        <!-- Row -->
        <div class="row">
          <div class="col-md-12">
            <h3 class="text-light">Let's find your address to set you up</h3>
            <br>
            <input class="form-control" id="addressLookUp" placeholder="Enter address here">

          </div>
          <div class="col-md-2 offset-5">
            <br>
            <button type="button" class="btn btn-success" id="searchAddress">Search</button>


          </div>

        </div>
