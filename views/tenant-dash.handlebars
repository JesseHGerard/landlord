<main role="main" class="container">
  <div id="info" data-quantity="{{quantity}}" data-labels="{{information}}">

  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <h1> Current Issues <h1>
          {{#each object}}
            <div class="col-md-5">
              <hr>
              <h6>Description: {{description}}</h6>
              <h6>Quantity: {{quantity}}</h6>
              <h6>Time submitted: {{createdAt}}</h6>


            </div>
          {{/each}}
      </div>

    </div>
    <div class="col-md-8">
      <h1>Welcome to your Dashboard</h1>
      <div class="row">
        <div class="col-md-12">
          <h2>Current Issues</h2>
          <!-- Chart -->
          <canvas id="myChart"></canvas>

        </div>
        <div class="col-md-12">
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Add an Issue here:</label>
            <textarea class="form-control" id="makeIssue" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary" id="newIssue">Submit</button>


        </div>

      </div>

    </div>
  </div>


</main>
